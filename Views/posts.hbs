<!DOCTYPE html>
<html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<head>
  <title>My Blog - Posts</title>
  <style>
  
    .post {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 20px;
      background-color: #f9f9f9;
    }

    .post h2 {
      color: #333;
    }
    .post p {
      margin: 0;
      
    }

    .update-button {
      background-color: #2ecc71;
      margin-top: 10px border: none;
      padding: 8px 16px;

      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 5px;
      cursor: pointer;
    }

    .delete-button {
      background-color: #2ecc71;
      margin-top: 10px border: none;
      padding: 8px 16px;

      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 5px;
      cursor: pointer;
    }
    .titlee{
      padding-top: 10px;
      padding-bottom: 10px;
    }
    .menu-bar {
        background-color: #333;
        display: flex;
        justify-content: space-around;
        padding: 10px;
    }

    .menu-item {
        color: white;
    }

    
    .menu-item a {
        color: #2ecc71; 
        text-decoration: none; 
    }
    .menu-item a:hover {
        text-decoration: underline; 
    }


  </style>
</head>
<body>
   <div class="menu-bar">
    <div class="menu-item" ><a href="/" >Home</a></div>
   <div class="menu-item"><a href="/About">About</a></div>
    <div class="menu-item"><a href="/Contact">Contact</a></div>
  </div>
  <h1 class="titlee">My Posts üòç</h1>

  {{#each posts}}
 <div class="post" data-post-id="{{id}}">
  <h2>{{title}}</h2>
   <div contenteditable="true" class="editable-post-content">{{post}}</div>
  <div class="original-post-content" style="display: none;">{{post}}</div>
  <button type="button" class="update-button" style="margin-top: 10px;">Update</button>
  <button type="button" class="delete-button" style="margin-top: 10px;">Delete</button>
</div>

  {{/each}}
  </div>

<script>
 const updateButtons = document.querySelectorAll(".update-button");

updateButtons.forEach((button) => {
  button.addEventListener("click", () => {
    const postElement = button.closest(".post");
    const postId = postElement.getAttribute("data-post-id");
    const updatedContent = postElement.querySelector(".editable-post-content").textContent;
    const originalContent = postElement.querySelector(".original-post-content").textContent;

  
    if (updatedContent.trim() === originalContent.trim()) {
    
      alert("Please make changes to the post before updating.");
    } else {
      
      fetch(`/posts/${postId}`, {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ post: updatedContent }),
      })
        .then((response) => {
          if (response.ok) {
            return response.json(); 
          } else {
            throw new Error("Failed to update post");
          }
        })
        .then((data) => {
       
          alert("Post updated successfully");
          console.log(data);
        })
        .catch((error) => {
      
          console.log(error);
        });
    }
  });
});

{{!-- for delete button  --}}

const deleteButtons = document.querySelectorAll(".delete-button");

deleteButtons.forEach((button) => {
  button.addEventListener("click", () => {
    const postElement = button.closest(".post");
    const postId = postElement.getAttribute("data-post-id");

  
    fetch(`/posts/${postId}`, {
      method: "DELETE",
    })
      .then((response) => {
        if (response.ok) {
    
          alert("Post deleted successfully");
     
          postElement.remove();
        } else {
          throw new Error("Failed to delete post");
        }
      })
      .catch((error) => {
  
        console.log(error);
      });
  });
});





</script>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
